<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>

    <style>
        *{
            padding: 0;
            margin: 0;
        }
        body{
            background-image: url('https://images.unsplash.com/photo-1559579313-021b6ec9f6d6?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8c3RhZGl1bXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&w=1000&q=80');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }
        .container{
            display: flex;
            flex-direction: column;
            margin-top: 5%;
        }
        .contest-card{
            width: 80%;
            display: flex;
            background-color: rgba(255,255,255,0.8);
            margin: auto;
            flex-direction: column;
            padding: 1% 3%;
            border-radius: 5px;
            margin-bottom: 2%;
        }
        .pool-price{
            display: flex;
            justify-content: space-between;
            padding: 2% 0;
        }
        .card-header{
            display: flex;
            justify-content: space-between;
            font-size: smaller;
            color: gray;
        }
        .contest-participation{
            display: flex;
            justify-content: space-between;
        }
        .player_name{
            color: white;
            text-align: center;
        }
        .team-name{
            color: white;
            font-size: 2rem;
            text-align: center;
            display: block;
        }
        .pool-price p{
            font-size: xx-large;
            font-weight: bolder;
        }
        .pool-price button{
            background-color: #00b137;
            border-radius: 5%;
            width: 15%;

        }

    </style>
</head>
<body>
    <div class="container">
        <div class="contest-card">
            <div class="card-header">
                <p>Prize Pool</p>
                <p>Entry</p>
            </div>
            <div class="pool-price">
                <p>₹11 Crores</p>
                <button>₹11</button>
            </div>
            <div class="contest-participation">
                <p> 11,000 Spots Left</p>
                <p> 1,11,111 Spots</p>
            </div>
        </div>

        <div class="contest-card">
            <div class="card-header">
                <p>Prize Pool</p>
                <p>Entry</p>
            </div>
            <div class="pool-price">
                <p>₹11 Crores</p>
                <button>₹11</button>
            </div>
            <div class="contest-participation">
                <p> 11,000 Spots Left</p>
                <p> 1,11,111 Spots</p>
            </div>
        </div>

        <div class="contest-card">
            <div class="card-header">
                <p>Prize Pool</p>
                <p>Entry</p>
            </div>
            <div class="pool-price">
                <p>₹11 Crores</p>
                <button>₹11</button>
            </div>
            <div class="contest-participation">
                <p> 11,000 Spots Left</p>
                <p> 1,11,111 Spots</p>
            </div>
        </div>

        <div class="contest-card">
            <div class="card-header">
                <p>Prize Pool</p>
                <p>Entry</p>
            </div>
            <div class="pool-price">
                <p>₹11 Crores</p>
                <button>₹11</button>
            </div>
            <div class="contest-participation">
                <p> 11,000 Spots Left</p>
                <p> 1,11,111 Spots</p>
            </div>
        </div>

    </div>

    <% let playerListHome = match_details.results[0].live_details.teamsheets.home %>
    <% let playerListAway = match_details.results[0].live_details.teamsheets.away %>

    <strong class="team-name"><%= homeTeamName %></strong>
    <br>
    <br>

    <% for(let i = 0; i < playerListHome.length; i++){ %>
        <% let playerDet = playerListHome[i]; %>
        <p class="player_name"><%= playerDet.player_name %></p>
    <% } %>

    <br>
    <br>

    <strong class="team-name"><%= awayTeamName %></strong>
    <br>
    <br>

    <% for(let i = 0; i < playerListAway.length; i++){ %>
        <% let playerDet = playerListAway[i]; %>
        <p class="player_name"><%= playerDet.player_name %></p>
    <% } %>
</body>
</html>